<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <TextView
        android:id="@+id/twittApperHeading"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="TwittApper"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:textSize="35sp"
        />
    <TextView
        android:layout_below="@+id/twittApperHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:textStyle="italic"
        android:textSize="17sp"
        android:text="An Twitter API integration app, through which you will be able to view induavisual twitter account and score rewards by tweeting."/>

    <com.twitter.sdk.android.core.identity.TwitterLoginButton
        android:id="@+id/login_button"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ProgressBar
        android:id="@+id/progressLayout"
        android:layout_marginTop="10dp"
        android:layout_margin="10dp"
        android:layout_below="@+id/login_button"
        android:layout_centerHorizontal="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="visible"/>
    <TextView
        android:id="@+id/waitLayout"
        android:layout_marginTop="10dp"
        android:layout_margin="10dp"
        android:layout_below="@+id/progressLayout"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:gravity="center"
        android:text="Please wait..."
        android:layout_height="50dp"
        android:visibility="visible">
    </TextView>
</RelativeLayout>
